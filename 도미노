package 문제;

import java.util.Scanner;

public class 도미노 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int n, sum = 0;

		n = sc.nextInt();

		for (int i = 0; i <= n; i++) {
			for (int j = 0; j <= n; j++) {
				sum += j;
			}
			sum += i;
		}
		System.out.println(sum);

	}

}
