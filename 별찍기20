package 브2;

import java.util.Scanner;

public class 별찍기20 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);

		int x = sc.nextInt();
		int j = 1;
		while (j < x + 1) {
			for (int i = 0; i < x; i++)
				System.out.print("* ");
			j++;
			if (j >= x + 1)
				break;
			System.out.println();
			if (j % 2 == 0)
				for (int i = 0; i < x; i++)
					System.out.print(" *");
			System.out.println();
			j++;
		}
	}

}
