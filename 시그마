package 브3;

import java.util.Scanner;

public class 시그마 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);

		long a, b;
		a = sc.nextInt();
		b = sc.nextInt();

		if (a <= b)
			System.out.println((a + b) * (b - a + 1) / 2);
		else
			System.out.println((a + b) * (a - b + 1) / 2);

	}

}
